{
  "name": "zero-trust-kiosk-electron",
  "version": "1.0.0",
  "description": "Zero Trust Kiosk - Electron Desktop Application",
  "main": "main.js",
  "author": "Zero Trust Team",
  "license": "MIT",
  "scripts": {
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.zerotrust.kiosk",
    "productName": "ZeroTrust Kiosk",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
